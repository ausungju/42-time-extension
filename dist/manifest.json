{
  "manifest_version": 3,
  "name": "42-time Extension",
  "version": "1.0",
  "description": "크롬 익스텐션 타입스크립트 기본 세팅",
  "icons": {
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.intra.42.fr/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "permissions": []
  
} 